<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <!--Forecast Theme -->
    <style name="ForecastTheme" parent="@style/AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Weather.NoTitle</item>
    </style>
    
    <style name="ActionBar.Solid.Weather.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/ic_logo</item>
    </style>



    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ForecastListStyle">

    </style>



    <!--Today's list items styles -->
    <style name="TodayListItemTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/today_list_item_text_color</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="TodayListItemDetailStyle" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/today_list_item_text_color</item>
    </style>

    <style name="TodayListItemMaxTempTextStyle" parent="@style/TodayListItemDetailStyle">
        <item name="android:textSize">72sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TodayListItemMinTextStyle" parent="@style/TodayListItemTextStyle">
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="ForecastListItemDateTextStyle" parent="@android:style/TextAppearance.Large">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ForecastListItemConditionTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/ForecastDetailGray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--Details fragment styles -->
    <style name="DetailFragmentTodayTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="DetailFragmentDateTextStyle" parent="@style/DetailFragmentTodayTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/ForecastDetailGray</item>
    </style>
    
    <style name="DetailFragmentMaxTempTextStyle" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">96sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="DetailFragmentMinTempTextStyle" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/ForecastDetailGray</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="ForecastDetailsConditionTextStyle" parent="@android:style/TextAppearance.Large">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="ForecastDetailsWeatherDetailsTextStyle" parent="@android:style/TextAppearance.Large">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/ForecastDetailGray</item>
    </style>


</resources>
